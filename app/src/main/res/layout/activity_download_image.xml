<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".downlaoddemo.DownloadImageActivity">

    <ImageView
        android:id="@+id/ivImageDownload"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <Button
        android:id="@+id/btnDownloadImage"
        android:text="@string/download_image_to_pictures_folder"
        android:onClick="downloadImage"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_gravity="center"
        android:id="@+id/btnDownloadtoInternal"
        android:text="@string/download_image_to_internal_folder"
        android:onClick="saveFileToLocalFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</LinearLayout>